<launch>
  <arg name="joystick" 		default="true"/>
  <arg name="controller" 	default="true"/>
  <arg name="arduino" 		default="false"/>
  <arg name="urg" 		default="false"/>
  <arg name="tf_publisher" 	default="true"/>
  <arg name="gmapping"		default="true"/>

  <group if="$(arg joystick)">
    <node name="joystick" pkg="joy" type="joy_node" required="true">
      <param name="dev" value="/dev/input/js2"/>
    </node>
  </group>

  <group if="$(arg controller)">
    <node name="controller" pkg="create_map" type="controller4" output="screen" required="true">
      <param name="kv" value="0.458"/>
      <param name="kw" value="1.478"/>
      <param name="d"  value="0.155"/>
      <param name="kp" value="130.0"/>
      <param name="ki" value="4.0"/>
      <param name="kd"  value="-0.5"/>
      <param name="LIMIT" value="0.05"/>
      <param name="ACC" value="1.0"/>
      <param name="FRIQUENCE" value="100"/>
    </node>
  </group>

  <group if="$(arg arduino)">
    <node pkg="rosserial_python" type="serial_node.py" name="arduino" required="true">
      <param name="port" value="/dev/ttyACM0"/>
      <param name="baud" value="57600"/>
    </node>
  </group>
  
  <group if="$(arg urg)">
    <node pkg="urg_node" name="urg_node" type="urg_node" required="true">
      <param name="frame_id" value="base_link"/>
      <param name="serial_port" value="/dev/serial/by-id/usb-Hokuyo_Data_Flex_for_USB_URG-Series_USB_Driver-if00"/>
    </node>
  </group>
  
  <group if="$(arg tf_publisher)">
    <node pkg="create_map" name="tf_publisher" type="tf_publisher" required="true">
      <param name="d"  value="0.155"/>
    </node>
  </group>
  
  <group if="$(arg gmapping)">
    <arg name="scan_topic" default="/scan" />
    <arg name="odom_topic" default="/odom" />
    
    <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
      <param name="base_frame" value="base_link"/>
      <param name="odom_frame" value="odom"/>
      <!-- param name="maxUrage" value="4.0"/ -->
      <!-- param name="maxRange" value="4.0"/ -->
      <param name="srr" value="0.3"/>
      <param name="srt" value="0.1"/>
      <param name="str" value="0.1"/>
      <param name="stt" value="0.3"/>
      <param name="particles" value="100"/>
    </node>     
  </group>
</launch>
